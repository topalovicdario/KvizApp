<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KvizApp.Views.AnswerPage"
             Title="AnswerPage">
    <Grid RowDefinitions="*,*,*" >
        <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="End" Text="{Binding CorrectAnswer}" FontSize="Large">
            
        </Label>
        <Label Grid.Row="1" HorizontalOptions="Center" VerticalOptions="Center" Text="{Binding Rezultatscore}"  FontSize="Large">

        </Label>
        <Label Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Start" Text="{Binding Rezultat}"  FontSize="Large">

        </Label>

    </Grid>
</ContentPage>