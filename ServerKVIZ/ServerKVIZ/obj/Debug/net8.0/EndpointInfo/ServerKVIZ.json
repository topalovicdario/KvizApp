{
  "openapi": "3.0.1",
  "info": {
    "title": "ServerKVIZ",
    "version": "1.0"
  },
  "paths": {
    "/Questions": {
      "get": {
        "tags": [
          "Questions"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ClientQuestion"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientQuestion"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ClientQuestion"
                }
              }
            }
          }
        }
      }
    },
    "/Questions/startGame": {
      "post": {
        "tags": [
          "Questions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateGameRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Questions/endGame": {
      "post": {
        "tags": [
          "Questions"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/Questions/checkAnswer": {
      "post": {
        "tags": [
          "Questions"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AnswerRequest"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/AnswerRequest"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/AnswerRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/SendAnswerCheckQuestion"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendAnswerCheckQuestion"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/SendAnswerCheckQuestion"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
