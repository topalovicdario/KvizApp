      "AnswerRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "answer": {
            "type": "integer",
            "format": "int32"
          },
          "score": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ClientQuestion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "text": {
            "type": "string",
            "nullable": true
          },
          "correctAnswer": {
            "type": "string",
            "nullable": true
          },
          "allAnswers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "difficulty": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "CreateGameRequest": {
        "type": "object",
        "properties": {
          "nicknameUser": {
            "type": "string",
            "nullable": true
          },
          "nicknameEnemy": {
            "type": "string",
            "nullable": true
          },
          "category": {
            "type": "string",
            "nullable": true
          },
          "difficulty": {
            "type": "string",
            "nullable": true
          },
          "duration": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "SendAnswerCheckQuestion": {
        "type": "object",
        "properties": {
          "correctAns": {
            "type": "string",
            "nullable": true
          },
          "is_correct": {
            "type": "boolean"
          },
          "enemy_score": {
            "type": "integer",
            "format": "int32"
          },
          "score": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      }
    }
